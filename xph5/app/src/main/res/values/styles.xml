<resources>

    <style name="H5AppTheme" parent="android:Theme.Light"></style>

    <style name="H5ProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="H5Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="H5AppTheme.Permissions">
        <item name="android:windowBackground">@color/black_font</item>
    </style>
</resources>